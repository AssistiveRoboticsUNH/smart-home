<robot name="my_box">

	<!-- * * * Minumum expresion of a robot that Gazebo can Represent Visually
	You need the inertal, collision and visual, otherwise doesnt work
	Even Mass cant be null * * * -->

 	<link name="base_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
      <mass value="0.5" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0" />
      <geometry>
        <box size="1 1 1"/>
      </geometry>
          
    </visual>
  </link>
	
 	
 
</robot>